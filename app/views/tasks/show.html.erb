<h1><%= @task.title %></h1>
<h2><%= @task.details %></h2>
<h3><%= @task.completed ? "This task is completed" : "This task is not completed" %></h3>
<h4><%= link_to "Edit this task", edit_path(@task) %></h4>
<h4><%= link_to "Delete this task",
  delete_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%></h4>
<h4><%= link_to "Back to the list", index_path %></h4>
